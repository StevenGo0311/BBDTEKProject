<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stevengo.myapplication">

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--允许程序通过gps芯片获取精确定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <meta-data
        android:name="com.amap.api.v2.apikey"
        android:value="3ccdd945a03cd8db1963a6b07e6e2f61" />

    <!-- 定义application,设置icon,label,theme等属性 -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/application_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- StartActivity,闪屏,指定为启动页 -->
        <activity android:name=".activitys.StartActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- mainActivity，主界面 -->
        <activity android:name=".activitys.MainActivity"/>
        <!--地图页面-->
        <activity android:name=".activitys.MapActivity" />
        <!--权限页面-->
        <activity android:name=".activitys.PermissionsActivity" />
        <!--测试页面-->
        <activity android:name=".activitys.TestActivity"/>
    </application>

</manifest>